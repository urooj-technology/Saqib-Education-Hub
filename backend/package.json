{
  "name": "saqib-education-hub-backend",
  "version": "1.0.0",
  "description": "Professional backend for Saqib Education Hub",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "node start-production.js",
    "test": "jest",
    "migrate": "sequelize-cli db:migrate",
    "migrate:prod": "NODE_ENV=production sequelize-cli db:migrate",
    "seed": "node seed.js",
    "seed:prod": "NODE_ENV=production node seed.js",
    "reset": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && npm run seed",
    "build": "echo 'No build step required for Node.js backend'",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "setup:prod": "npm run migrate:prod && npm run seed:prod",
    "setup:db": "node setup-production-db.js",
    "quick-fix": "node quick-fix-production.js",
    "compress-images": "node scripts/compress-existing-images.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop saqib-education-hub-api",
    "pm2:restart": "pm2 restart saqib-education-hub-api",
    "pm2:delete": "pm2 delete saqib-education-hub-api",
    "pm2:logs": "pm2 logs saqib-education-hub-api",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "education",
    "hub",
    "backend",
    "api"
  ],
  "author": "Saqib Education Hub",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-session-sequelize": "^7.1.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "pm2": "^5.4.3",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.1",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
